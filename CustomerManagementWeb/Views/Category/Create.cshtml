@model  CustomerManagementWeb.ServiceReference1.CategoryDto
@{
    ViewBag.Title = "Create";
}


<link href="~/Content/form.css" rel="stylesheet" />

<div class="col-6 text-left">
    <a href="/Category/Index">
        <button type="button" class="btn btn-warning"> Geri Dön</button>
    </a>
</div>


   <h2 class="header-top">Kategori Ekle</h2>


<div class="container" style="margin-bottom:100px;">

    @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-10">

                <div class="form-group">
                    <label for="exampleFormControlInput1">Kategori İsmi</label>
                    <input type="text" name="CategoryName" class="form-control" placeholder="Kategori İsmi">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Kategori Açıklaması</label>
                    <textarea class="form-control" name="CategoryDescription" id="exampleFormControlTextarea1" placeholder="Kategori Açıklaması" rows="5"></textarea>
                </div>
              

                <br />
                <br />

                <div class="container">
                    <div class="row">

                        <div class="col-6 text-left" style="margin-bottom:100px;">
                            <a href="/Category/Index">
                                <button type="button" class="btn btn-warning"> Geri Dön</button>
                            </a>
                        </div>

                        <div class="col-6 text-right" style="margin-bottom:100px;">
                            <div class="form-group">
                                <input type="submit" value="Ekle" class="btn login_btn btn-primary">
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>


    }
</div>


