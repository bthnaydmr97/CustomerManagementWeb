@model CustomerManagementWeb.ServiceReference1.CustomerDto
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <p><strong>İsim Soyisim:</strong> @Model.Name @Model.Surname</p>
            <p><strong>Telefon:</strong> @Model.Phone</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>İl/İlçe:</strong> @Model.City</p>
            <p><strong>Adres:</strong> @Model.Address</p>

        </div>

    </div>

    <div class="col-6 text-left">
        <a href="/Customer/Index">
            <button type="button" class="btn btn-warning"> Geri Dön</button>
        </a>
    </div>
</div>




