@model IList<CustomerManagementWeb.ServiceReference1.CustomerDto>

    @{
        ViewBag.Title = "Index";
    }


    <link href="~/css/style.css" rel="stylesheet">


    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Müşteriler</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a href="/Customer/Create">
                    <button type="button" class="btn btn-secondary"> Yeni Müşteri Ekle</button>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>İsim Soyisim</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th></th>
                                <th></th>


                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>İsim Soyisim</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (CustomerManagementWeb.ServiceReference1.CustomerDto item in Model)
                            {
                                <tr>
                                    <td>@item.Name  @item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>
                                        <a href="/Customer/Details/@item.Id">
                                            <button type="button" class="btn btn-primary">Detay</button>
                                        </a>
                                        <a href="/Customer/Update/@item.Id">
                                            <button type="button" class="btn btn-warning">Düzenle</button>
                                        </a>
                                        <a href="/Customer/Delete/@item.Id">
                                            <button type="button" class="btn btn-danger">Sil</button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Customer/OrderHistory/@item.Id">
                                            <button type="button" class="btn btn-success">Sipariş Geçmişi</button>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    @section footer{
        @Html.Partial("_PartialFooter")
    }
