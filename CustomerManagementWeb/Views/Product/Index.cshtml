@model IList<CustomerManagementWeb.ServiceReference1.ProductDto>

@{
    ViewBag.Title = "Index";
}


<link href="~/css/style.css" rel="stylesheet">


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Ürünler</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="/Product/Create">
                <button type="button" class="btn btn-secondary"> Yeni Ürün Ekle</button>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ürün İsmi</th>
                            <th>Kategori</th>
                            <th>Stok</th>
                            <th>Fiyat</th>
                            <th></th>


                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ürün İsmi</th>
                            <th>Kategori</th>
                            <th>Stok</th>
                            <th>Fiyat</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (CustomerManagementWeb.ServiceReference1.ProductDto item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.StockQuantity</td>
                                <td>@item.Price</td>
                                <td>
                                    <a href="/Product/Details/@item.Id">
                                        <button type="button" class="btn btn-primary">Detay</button>
                                    </a>
                                    <a href="/Product/Update/@item.Id">
                                        <button type="button" class="btn btn-warning">Düzenle</button>
                                    </a>
                                    <a href="/Product/Delete/@item.Id">
                                        <button type="button" class="btn btn-danger">Sil</button>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section footer{
    @Html.Partial("_PartialFooter")
}

